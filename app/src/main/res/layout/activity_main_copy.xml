<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/checkBox"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="1.0"/>
    <!--
    Loesung: Diese Zeile entfernen
    app:layout_constraintBottom_toTopOf="@+id/button2"
    -->
    <Button
            android:text="Button"
            android:layout_width="182dp"
            android:layout_height="39dp"
            android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/spinner"/>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/checkBox"
            tools:layout_editor_absoluteY="53dp"/>
    <RadioButton
            android:text="RadioButton"
            android:layout_width="113dp"
            android:layout_height="29dp"
            android:id="@+id/radioButton"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <Spinner
            android:layout_width="368dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="103dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/spinner"/>
    <Switch
            android:text="Switch"
            android:layout_width="115dp"
            android:layout_height="28dp"
            android:id="@+id/switch1" app:layout_constraintStart_toEndOf="@+id/radioButton"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="168dp"
            android:layout_height="41dp"
            tools:layout_editor_absoluteX="108dp" android:id="@+id/progressBar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2" tools:visibility="invisible"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="238dp"
            android:id="@+id/ratingBar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>